<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.usuario.myapplication.ContactActivity">

    <TextView
        android:id="@+id/LinkedInTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:drawableStart="@mipmap/ic_linkedin_black_24dp"
        android:gravity="center"
        android:padding="16dp"
        android:text="LinkedIn"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/PhoneTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:drawableStart="@mipmap/ic_phone_black_24dp"
        android:gravity="center"
        android:padding="16dp"
        android:text="Llamar"
        android:textSize="24sp"/>

    <fragment
        android:id="@+id/emailFragment"
        android:name="com.example.usuario.myapplication.EmailFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


</LinearLayout>
